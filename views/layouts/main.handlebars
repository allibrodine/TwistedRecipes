<body>
    <header>

        {{#if loggedIn}}
        <div id="logout">
            <a href="/logout">Log Out</a>
        </div>
        {{else}}
        <div id="login">
            <a href="/login">Log In</a>
        </div>
        
        <div id="signup">
            <a href="/signup">Sign Up</a>
        </div>

        <div id="my-recipes">
            <a href="/recipes">My Recipes</a>
        </div>
        {{/if}}
        
        <h1>
            <a href="/">Twisted Recipes</a>
        </h1>

    </header>

    <main>
        {{{ body }}}
    </main>

    {{#if loggedIn}}
    <script src="/javascript/logout.js"></script>
    {{/if}}

</body>

</html>